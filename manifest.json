{
              "manifest_version": 3,
              "name": "Accor Executive Lounge Highlighter",
              "version": "2.6",
              "description": "Highlights Accor hotels globally that have an Executive Lounge with a red border and badge on search results.",
              "incognito": "spanning",
              "permissions": ["storage"],
              "host_permissions": [
                              "https://all.accor.com/*",
                              "https://nkikqvujmhiahryrdgxr.supabase.co/*"
              ],
              "action": {
                              "default_popup": "popup.html",
                              "default_title": "Accor Rate History"
              },
              "background": {
                              "service_worker": "background.js"
              },
              "content_scripts": [
                              {
                                                "matches": ["https://all.accor.com/booking/*"],
                                                "js": ["page-bridge.js"],
                                                "run_at": "document_idle",
                                                "world": "MAIN"
                              },
                              {
                                                "matches": ["https://all.accor.com/booking/*"],
                                                "js": ["content.js"],
                                                "run_at": "document_idle"
                              }
              ]
}
